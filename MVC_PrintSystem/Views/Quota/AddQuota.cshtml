@{
    ViewData["Title"] = "Add Quota";
}

<h2>Add Quota</h2>

<form asp-action="AddQuota" method="post">
    <div class="form-group">
        <label for="username">Username</label>
        <input type="text" id="username" name="username" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="quotas">Quota Amount</label>
        <input type="number" id="quotas" name="quotas" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Add Quota</button>
</form>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}