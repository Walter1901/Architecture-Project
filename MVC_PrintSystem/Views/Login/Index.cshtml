@using MVC_PrintSystem.Models.ViewModels
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2>Login</h2>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <div>@error.ErrorMessage</div>
                    }
                </div>
            }

            <form asp-action="Index" method="post">
                <div class="form-group mb-3">
                    <label asp-for="CardId">Card ID</label>
                    <input asp-for="CardId" class="form-control" />
                    <span asp-validation-for="CardId" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Login</button>
            </form>

            <p class="mt-3"><small>Test: Card ID 123</small></p>
        </div>
    </div>
</div>